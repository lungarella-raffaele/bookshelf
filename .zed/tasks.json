[
  {
    "label": "Frontend Server",
    "command": "elm-live src/Main.elm --port=8080 --dir=dist -- --output=dist/elm.js",
    "cwd": "${ZED_WORKTREE_ROOT}/frontend"
  },
  {
    "label": "Compile Tailwind",
    "command": "npx @tailwindcss/cli -i ./dist/css/app.css -o ./dist/css/tailwind.css --watch",
    "cwd": "${ZED_WORKTREE_ROOT}/frontend"
  },
  {
    "label": "Backend Server",
    "command": "cargo run",
    "cwd": "${ZED_WORKTREE_ROOT}/backend"
  }
]
